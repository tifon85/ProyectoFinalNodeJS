<h2>Alta Producto</h2>
<form id="formularioAltaProducto">
    title: <input type="text" name="title" id="title">
    description: <input type="text" name="description" id="description">
    code: <input type="text" name="code" id="code">
    price: <input type="number" name="price" id="price">
    stock: <input type="number" name="stock" id="stock">
    category: <input type="text" name="category" id="category">
    thumbnails: <input type="text" name="thumbnails" id="thumbnails">
    <input type="hidden" name="userEmail" id="userEmail" value={{user.email}}>
    <input type="submit" value="Alta Producto">
</form>
<br>
<br>
<h2>Baja Producto</h2>
<form id="formularioBajaProducto">
    Ingrese el ID de producto a eliminar: <input type="number" name="id" id="id">
    <input type="hidden" name="userEmail" id="userEmail" value={{user.email}}>
    <input type="submit" value="Baja Producto">
</form>

